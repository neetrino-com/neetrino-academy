generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  name           String
  password       String
  role           UserRole         @default(STUDENT)
  avatar         String?
  isActive       Boolean          @default(true)
  lastLoginAt    DateTime?
  // –†–∞—Å—à–∏—Ä–µ–Ω–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –ø—Ä–æ—Ñ–∏–ª—è
  age            Int?
  gender         String?          // "male", "female", "other"
  phone          String?
  address        String?
  city           String?
  country        String?         @default("Armenia")
  telegram       String?
  instagram      String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  achievements   Achievement[]
  assignments    Assignment[]
  courses        Course[]
  enrollments    Enrollment[]
  lessonProgress LessonProgress[]
  messages       Message[]
  quizAttempts   QuizAttempt[]
  submissions    Submission[]
  groupStudents  GroupStudent[]
  groupTeachers  GroupTeacher[]
  notifications  Notification[]
  groupMessages  GroupMessage[]
  eventAttendees EventAttendee[]
  createdEvents  Event[]         @relation("EventCreator")
  createdLectures Lecture[]      @relation("LectureCreator")
  auditLogs      AuditLog[]
  createdChecklists Checklist[]  @relation("ChecklistCreator")
  checklistProgress ChecklistProgress[]
  checklistItemProgress ChecklistItemProgress[]
  payments       Payment[]
}

model Course {
  id           String         @id @default(cuid())
  title        String
  description  String?
  slug         String         @unique
  direction    Direction
  level        Level
  price        Decimal?
  isActive     Boolean        @default(true)
  isDraft      Boolean        @default(true)
  thumbnail    String?
  duration     Int?           // –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –µ–¥–∏–Ω–∏—Ü
  durationUnit String?        @default("weeks") // days, weeks, months
  currency     String?        @default("RUB")   // RUB, USD, AMD
  // –ù–æ–≤—ã–µ –ø–æ–ª—è –¥–ª—è —Å–∏—Å—Ç–µ–º—ã –ø–ª–∞—Ç–µ–∂–µ–π
  paymentType  PaymentType    @default(ONE_TIME) // MONTHLY, ONE_TIME
  monthlyPrice Decimal?       // —Ü–µ–Ω–∞ –∑–∞ –º–µ—Å—è—Ü –¥–ª—è –µ–∂–µ–º–µ—Å—è—á–Ω–æ–π –æ–ø–ª–∞—Ç—ã
  totalPrice   Decimal?       // –æ–±—â–∞—è —Ü–µ–Ω–∞ –∑–∞ –≤–µ—Å—å –∫—É—Ä—Å
  createdBy    String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  creator      User?          @relation(fields: [createdBy], references: [id])
  enrollments  Enrollment[]
  messages     Message[]
  modules      Module[]
  events       Event[]
  payments     Payment[]
  groupCourses GroupCourse[]
}

model Module {
  id          String       @id @default(cuid())
  title       String
  description String?
  order       Int
  courseId    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignments Assignment[]
  lessons     Lesson[]
  course      Course       @relation(fields: [courseId], references: [id])
}

model Lecture {
  id          String   @id @default(cuid())
  title       String
  content     String   // JSON —Å –±–ª–æ–∫–∞–º–∏ –∫–æ–Ω—Ç–µ–Ω—Ç–∞
  description String?
  thumbnail   String?
  isActive    Boolean  @default(true)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User     @relation("LectureCreator", fields: [createdBy], references: [id])
  lessons     Lesson[]
}

model Lesson {
  id          String           @id @default(cuid())
  title       String
  description String?          // –ö—Ä–∞—Ç–∫–æ–µ –æ–ø–∏—Å–∞–Ω–∏–µ —É—Ä–æ–∫–∞
  content     String?          // JSON —Å –±–ª–æ–∫–∞–º–∏ –∫–æ–Ω—Ç–µ–Ω—Ç–∞ (–∫–∞–∫ –≤ –ª–µ–∫—Ü–∏—è—Ö)
  thumbnail   String?          // –û–±–ª–æ–∂–∫–∞ —É—Ä–æ–∫–∞
  duration    Int?             // –î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –≤ –º–∏–Ω—É—Ç–∞—Ö
  order       Int
  isActive    Boolean          @default(true)
  moduleId    String
  lectureId   String?          // –°–≤—è–∑—å —Å –ª–µ–∫—Ü–∏–µ–π (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
  checklistId String?          // –°–≤—è–∑—å —Å —á–µ–∫–ª–∏—Å—Ç–æ–º (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  module      Module           @relation(fields: [moduleId], references: [id])
  lecture     Lecture?         @relation(fields: [lectureId], references: [id])
  checklist   Checklist?       @relation(fields: [checklistId], references: [id])
  progress    LessonProgress[]
  quiz        Quiz?
}

model Quiz {
  id           String         @id @default(cuid())
  title        String
  description  String?
  lessonId     String         @unique
  timeLimit    Int?
  passingScore Int            @default(70)
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  lesson       Lesson         @relation(fields: [lessonId], references: [id])
  attempts     QuizAttempt[]
  questions    QuizQuestion[]
}

model QuizQuestion {
  id        String       @id @default(cuid())
  question  String
  type      QuestionType
  order     Int
  points    Int          @default(1)
  quizId    String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  options   QuizOption[]
  quiz      Quiz         @relation(fields: [quizId], references: [id])
}

model QuizOption {
  id         String       @id @default(cuid())
  text       String
  isCorrect  Boolean      @default(false)
  order      Int
  questionId String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  question   QuizQuestion @relation(fields: [questionId], references: [id])
}

model QuizAttempt {
  id          String    @id @default(cuid())
  userId      String
  quizId      String
  score       Float?
  maxScore    Int
  passed      Boolean   @default(false)
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  quiz        Quiz      @relation(fields: [quizId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@unique([userId, quizId])
}

model Assignment {
  id          String       @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  moduleId    String
  createdBy   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  creator     User         @relation(fields: [createdBy], references: [id])
  module      Module       @relation(fields: [moduleId], references: [id])
  submissions Submission[]
  groupAssignments GroupAssignment[]
  events      Event[]
}

model LessonProgress {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  completed Boolean  @default(false)
  progress  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, lessonId])
}

model Enrollment {
  id         String           @id @default(cuid())
  userId     String
  courseId   String
  status     EnrollmentStatus @default(ACTIVE)
  enrolledAt DateTime         @default(now())
  // –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –ø–ª–∞—Ç–µ–∂–∞—Ö
  paymentStatus PaymentStatus  @default(PENDING)
  nextPaymentDue DateTime?     // –∫–æ–≥–¥–∞ —Å–ª–µ–¥—É—é—â–∏–π –ø–ª–∞—Ç–µ–∂ –¥–ª—è –µ–∂–µ–º–µ—Å—è—á–Ω—ã—Ö –∫—É—Ä—Å–æ–≤
  course     Course           @relation(fields: [courseId], references: [id])
  user       User             @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model Submission {
  id           String     @id @default(cuid())
  userId       String
  assignmentId String
  content      String?
  fileUrl      String?
  score        Float?
  feedback     String?
  submittedAt  DateTime   @default(now())
  gradedAt     DateTime?
  assignment   Assignment @relation(fields: [assignmentId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}

model Message {
  id        String   @id @default(cuid())
  content   String
  userId    String
  courseId  String?
  createdAt DateTime @default(now())
  course    Course?  @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Achievement {
  id          String          @id @default(cuid())
  userId      String
  type        AchievementType
  title       String
  description String?
  earnedAt    DateTime        @default(now())
  user        User            @relation(fields: [userId], references: [id])
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

enum Direction {
  WORDPRESS
  VIBE_CODING
  SHOPIFY
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  SUSPENDED  // –ø—Ä–∏–æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω –∏–∑-–∑–∞ –Ω–µ–æ–ø–ª–∞—Ç—ã
}

enum PaymentType {
  MONTHLY    // –µ–∂–µ–º–µ—Å—è—á–Ω–∞—è –æ–ø–ª–∞—Ç–∞
  ONE_TIME   // —Ä–∞–∑–æ–≤–∞—è –æ–ø–ª–∞—Ç–∞ –∑–∞ –≤–µ—Å—å –ø–µ—Ä–∏–æ–¥
}

enum PaymentStatus {
  PENDING    // –æ–∂–∏–¥–∞–µ—Ç –æ–ø–ª–∞—Ç—ã
  PAID       // –æ–ø–ª–∞—á–µ–Ω–æ
  OVERDUE    // –ø—Ä–æ—Å—Ä–æ—á–µ–Ω–æ
  CANCELLED  // –æ—Ç–º–µ–Ω–µ–Ω–æ
}

enum AchievementType {
  COURSE_COMPLETED
  ASSIGNMENT_SUBMITTED
  PERFECT_SCORE
  STREAK_7_DAYS
  STREAK_30_DAYS
}

enum QuestionType {
  MULTIPLE_CHOICE
  SINGLE_CHOICE
  TRUE_FALSE
}

enum GroupType {
  ONLINE
  OFFLINE
  HYBRID
}

enum GroupMemberStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum TeacherRole {
  MAIN
  ASSISTANT
  GUEST
}



// –ì—Ä—É–ø–ø–æ–≤–∞—è —Å–∏—Å—Ç–µ–º–∞
model Group {
  id          String       @id @default(cuid())
  name        String
  description String?
  type        GroupType    @default(ONLINE)
  maxStudents Int          @default(30)
  startDate   DateTime
  endDate     DateTime?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  students    GroupStudent[]
  teachers    GroupTeacher[]
  courses     GroupCourse[]
  assignments GroupAssignment[]
  messages    GroupMessage[]
  events      Event[]
}

model GroupStudent {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  joinedAt  DateTime @default(now())
  status    GroupMemberStatus @default(ACTIVE)
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

model GroupTeacher {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  role      TeacherRole @default(MAIN)
  joinedAt  DateTime @default(now())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

model GroupCourse {
  id        String   @id @default(cuid())
  groupId   String
  courseId  String
  assignedAt DateTime @default(now())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([groupId, courseId])
}

model GroupAssignment {
  id          String   @id @default(cuid())
  groupId     String
  assignmentId String
  dueDate     DateTime
  assignedAt  DateTime @default(now())
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  assignment  Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@unique([groupId, assignmentId])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String?
  isRead    Boolean          @default(false)
  data      String?          // JSON data for additional context
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GroupMessage {
  id        String           @id @default(cuid())
  groupId   String
  userId    String
  type      MessageType      @default(REGULAR)
  content   String
  fileUrl   String?
  isEdited  Boolean          @default(false)
  isDeleted Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  group     Group            @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies   GroupMessage[]   @relation("MessageReplies")
  replyTo   GroupMessage?    @relation("MessageReplies", fields: [replyToId], references: [id])
  replyToId String?
}

enum MessageType {
  REGULAR
  ANNOUNCEMENT
  SYSTEM
  ASSIGNMENT_DISCUSSION
}

model Event {
  id            String          @id @default(cuid())
  title         String
  description   String?
  type          EventType
  startDate     DateTime
  endDate       DateTime
  location      String?
  isRecurring   Boolean         @default(false)
  recurringRule String?         // JSON string for recurring rules
  createdById   String
  groupId       String?
  courseId      String?
  assignmentId  String?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  createdBy     User            @relation("EventCreator", fields: [createdById], references: [id], onDelete: Cascade)
  group         Group?          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  course        Course?         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assignment    Assignment?     @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  attendees     EventAttendee[]
}

model EventAttendee {
  id         String            @id @default(cuid())
  eventId    String
  userId     String
  status     AttendanceStatus  @default(PENDING)
  response   String?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  
  event      Event             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([eventId, userId])
}

enum EventType {
  LESSON
  EXAM
  DEADLINE
  MEETING
  WORKSHOP
  SEMINAR
  CONSULTATION
  ANNOUNCEMENT
  OTHER
}

enum AttendanceStatus {
  PENDING
  ATTENDING
  NOT_ATTENDING
  MAYBE
  ATTENDED
  ABSENT
}

enum NotificationType {
  NEW_ASSIGNMENT
  ASSIGNMENT_SUBMITTED
  ASSIGNMENT_GRADED
  DEADLINE_REMINDER
  COURSE_ASSIGNED
  GROUP_ADDED
  NEW_MESSAGE
  EVENT_REMINDER
  EVENT_CANCELLED
  EVENT_UPDATED
}

model AuditLog {
  id          String    @id @default(cuid())
  userId      String?   // –∫—Ç–æ –≤—ã–ø–æ–ª–Ω–∏–ª –¥–µ–π—Å—Ç–≤–∏–µ
  action      String    // —Ç–∏–ø –¥–µ–π—Å—Ç–≤–∏—è (USER_CREATED, USER_UPDATED, BULK_ACTION, etc.)
  entity      String    // –Ω–∞ –∫–∞–∫–æ–π —Å—É—â–Ω–æ—Å—Ç–∏ (User, Course, Group, etc.)
  entityId    String?   // ID —Å—É—â–Ω–æ—Å—Ç–∏
  details     String?   // –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –¥–µ—Ç–∞–ª–∏ –≤ JSON
  ipAddress   String?   // IP –∞–¥—Ä–µ—Å
  userAgent   String?   // User Agent
  createdAt   DateTime  @default(now())

  user        User?     @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

// –°–∏—Å—Ç–µ–º–∞ —á–µ–∫–ª–∏—Å—Ç–æ–≤
model Checklist {
  id          String   @id @default(cuid())
  title       String
  description String?
  direction   Direction // WORDPRESS, VIBE_CODING, SHOPIFY
  thumbnail   String?
  isActive    Boolean  @default(true)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  creator     User              @relation("ChecklistCreator", fields: [createdBy], references: [id])
  groups      ChecklistGroup[]
  lessons     Lesson[]          // —Å–≤—è–∑—å —Å —É—Ä–æ–∫–∞–º–∏
  progress    ChecklistProgress[]
}

model ChecklistGroup {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int
  isCollapsed Boolean  @default(false) // —Å–∫—Ä—ã—Ç–∞ –ª–∏ –≥—Ä—É–ø–ø–∞ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
  checklistId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  checklist   Checklist        @relation(fields: [checklistId], references: [id], onDelete: Cascade)
  items       ChecklistItem[]
}

model ChecklistItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int
  isRequired  Boolean  @default(true) // –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–π –ª–∏ –ø—É–Ω–∫—Ç
  groupId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  group       ChecklistGroup    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  progress    ChecklistItemProgress[]
}

model ChecklistProgress {
  id          String   @id @default(cuid())
  userId      String
  checklistId String
  startedAt   DateTime @default(now())
  completedAt DateTime?
  progress    Float    @default(0) // –ø—Ä–æ—Ü–µ–Ω—Ç –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è 0-100
  
  user        User              @relation(fields: [userId], references: [id])
  checklist   Checklist         @relation(fields: [checklistId], references: [id])
  
  @@unique([userId, checklistId])
}

model ChecklistItemProgress {
  id        String              @id @default(cuid())
  userId    String
  itemId    String
  status    ChecklistItemStatus @default(NOT_COMPLETED)
  comment   String?             // –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π —Å—Ç—É–¥–µ–Ω—Ç–∞
  updatedAt DateTime            @updatedAt
  
  user      User                @relation(fields: [userId], references: [id])
  item      ChecklistItem       @relation(fields: [itemId], references: [id])
  
  @@unique([userId, itemId])
}

enum ChecklistItemStatus {
  COMPLETED     // ‚úÖ –í—ã–ø–æ–ª–Ω–µ–Ω–æ
  NOT_COMPLETED // ‚ùå –ù–µ –≤—ã–ø–æ–ª–Ω–µ–Ω–æ  
  NOT_NEEDED    // üö´ –ù–µ –Ω—É–∂–Ω–æ
  HAS_QUESTIONS // ‚ùì –ï—Å—Ç—å –≤–æ–ø—Ä–æ—Å—ã
}

// –ù–æ–≤–∞—è –º–æ–¥–µ–ª—å –¥–ª—è –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏—è –ø–ª–∞—Ç–µ–∂–µ–π
model Payment {
  id          String        @id @default(cuid())
  userId      String
  courseId    String
  amount      Decimal
  currency    String        @default("AMD")
  status      PaymentStatus @default(PENDING)
  paymentType PaymentType
  // –î–ª—è –µ–∂–µ–º–µ—Å—è—á–Ω—ã—Ö –ø–ª–∞—Ç–µ–∂–µ–π
  monthNumber Int?          // –Ω–æ–º–µ—Ä –º–µ—Å—è—Ü–∞ (1, 2, 3...)
  dueDate     DateTime?     // –∫–æ–≥–¥–∞ –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –æ–ø–ª–∞—á–µ–Ω
  paidAt      DateTime?     // –∫–æ–≥–¥–∞ –±—ã–ª –æ–ø–ª–∞—á–µ–Ω
  // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è
  paymentMethod String?     // —Å–ø–æ—Å–æ–± –æ–ø–ª–∞—Ç—ã
  transactionId String?     // ID —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–∏
  notes       String?       // –∑–∞–º–µ—Ç–∫–∏
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  user        User          @relation(fields: [userId], references: [id])
  course      Course        @relation(fields: [courseId], references: [id])
  
  @@index([userId, courseId])
  @@index([status])
  @@index([dueDate])
}